= form_for(:user,
             :url  => user_password_path(@user,
             :token => @user.confirmation_token),
             :html => { :method => :put, :class => 'form-horizontal' }) do |form|
  %fieldset
    %legend Change your password
    %p Your password has been reset. Choose a new password below.
    .control-group
      = form.label :password, "Choose password", :class => 'control-label'
      .controls
        = form.password_field :password
    .form-actions
      .pull-right
        = form.submit "Save this password"